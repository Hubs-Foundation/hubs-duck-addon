{
    "compilerOptions": {
      "target": "es6",
      "module": "es6",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "sourceMap": true,
      "moduleResolution": "node",
    },
    "include": ["src/**/*.ts", "types/*"],
    "exclude": ["node_modules", "dist"]
  }
  